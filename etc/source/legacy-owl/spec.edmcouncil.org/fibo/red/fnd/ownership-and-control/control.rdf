<owl:ObjectProperty rdf:about="&fibo-fnd-oac-ctl;controlInvolves">
      <rdfs:label>control involves</rdfs:label>
      <rdfs:subPropertyOf rdf:resource="&fibo-fnd-rel-rel;involves"/>
      <rdfs:domain rdf:resource="&fibo-fnd-oac-ctl;Control"/>
      <rdfs:range rdf:resource="&fibo-fnd-oac-ctl;ControllingParty"/>
   </owl:ObjectProperty>

   <owl:ObjectProperty rdf:about="&fibo-fnd-oac-ctl;controllingPartyHasRoleControls">
      <rdfs:label>controlling party has role controls</rdfs:label>
      <skos:definition>Some form of control is exercised by the party.</skos:definition>
      <rdfs:subPropertyOf rdf:resource="&fibo-fnd-pty-rl;hasRole"/>
      <rdfs:subPropertyOf rdf:resource="&fibo-fnd-rel-rel;controls"/>
      <rdfs:domain rdf:resource="&fibo-fnd-oac-ctl;ControllingParty"/>
      <rdfs:range rdf:resource="&fibo-fnd-oac-ctl;Control"/>
   </owl:ObjectProperty>


